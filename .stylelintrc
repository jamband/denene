{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-order"],
  "overrides": [
    {
      "files": ["**/*.astro"],
      "customSyntax": "postcss-html"
    }
  ],
  "rules": {
    "declaration-property-value-no-unknown": true,
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "order/properties-alphabetical-order": true
  }
}
