---
import styles from "./styles.module.css";

type Props = {
  text: string;
  color: `#${string}`;
  background: `#${string}`;
  class?: string;
};

const { text, color, background, class: className } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  role="img"
  preserveAspectRatio="xMidYMid slice"
  focusable="false"
  class:list={[styles.container, className]}
>
  <title>{text}</title>
  <rect width="100%" height="100%" fill={background}></rect>
  <text x="50%" y="50%" fill={color} dy="0.3em">{text}</text>
</svg>
