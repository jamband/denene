---
import IconExternalLink from "@/icons/IconExternalLink.astro";

type Props = {
  path: string;
  text: string;
};

const { path, text } = Astro.props;
const _prefix = "https://developer.mozilla.org/en-US/docs/";
---

<blockquote cite={_prefix + path}>
  <p><slot /></p>
  <footer>
    <a href={_prefix + path} target="_blank" rel="noreferrer"
      >mdn Â» {text}<IconExternalLink class="external-link-icon" />
    </a>
  </footer>
</blockquote>

<style>
  blockquote {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  footer {
    text-align: center;
  }

  a {
    padding: 0.25rem 1rem;
  }

  .external-link-icon {
    height: 1rem;
    margin-left: 0.1rem;
    vertical-align: -0.175em;
    width: 1rem;
  }
</style>
