---
import Layout from "@/layouts/Layout.astro";

import BackToHomeLink from "@/components/BackToHomeLink.astro";
import PageHeader from "@/components/PageHeader.astro";
import PageSection from "@/components/PageSection.astro";
import { APP_DESCRIPTION, APP_NAME, APP_REPOSITORY_URL } from "@/constants/app";
import IconExternalLink from "@/icons/IconExternalLink.astro";

const title = "about";
---

<Layout title={title}>
  <PageHeader title={title} />
  <PageSection class="centering">
    <p>{APP_DESCRIPTION}.</p>
    <p>
      this website is an open source project. see
      <a href={APP_REPOSITORY_URL} target="_blank" rel="noreferrer"
        >github {APP_NAME}<IconExternalLink class="external-link-icon" />
      </a>
       for details.
    </p>
  </PageSection>
  <BackToHomeLink />
</Layout>

<style>
  .centering {
    text-align: center;
  }

  .external-link-icon {
    height: 1rem;
    margin-left: 0.1rem;
    vertical-align: -0.175em;
    width: 1rem;
  }
</style>
