---
import { BackToHomeLink } from "@/components/back-to-home-link";
import { BrowserSupport } from "@/components/browser-support";
import { Code } from "@/components/code";
import { MdnDoc } from "@/components/mdn-doc";
import { PageHeader } from "@/components/page/header";
import { PageSection } from "@/components/page/section";
import { Layout } from "@/layouts/layout";
import styles from "@/styles/pages/focus-within/styles.module.css";

const title = ":focus-within";
---

<Layout title={title}>
  <PageHeader title={title} />
  <PageSection>
    <MdnDoc path="Web/CSS/:focus-within" text={title}>
      the <Code code=":focus-within" /> css pseudo-class matches an element if
      the element or any of its descendants are focused. in other words, it
      represents an element that is itself matched by the :focus pseudo-class or
      has a descendant that is matched by <Code code=":focus" />. (this includes
      descendants in shadow trees.)
    </MdnDoc>
  </PageSection>
  <PageSection class={styles.formContainer}>
    <form>
      <fieldset class={styles.example1}>
        <legend>#1</legend>
        <label for="username1">username</label>
        <input
          type="text"
          id="username1"
          class={styles.textbox}
          placeholder="focus here"
          autocomplete="username"
        />
        <label for="password1">password</label>
        <input
          type="password"
          id="password1"
          class={styles.textbox}
          placeholder="focus here"
          autocomplete="current-password"
        />
      </fieldset>
    </form>
    <form>
      <fieldset class={styles.example2}>
        <legend>#2</legend>
        <label for="username2">username</label>
        <input
          type="text"
          id="username2"
          class={styles.textbox}
          placeholder="focus here"
          autocomplete="username"
        />
        <label for="password2">password</label>
        <input
          type="password"
          id="password2"
          class={styles.textbox}
          placeholder="focus here"
          autocomplete="current-password"
        />
      </fieldset>
    </form>
  </PageSection>
  <PageSection>
    <BrowserSupport
      items={[
        {
          value: ":focus-within",
          chrome: "60",
          firefox: "52",
          safari: "10.1",
        },
        {
          value: "::placeholder",
          chrome: "57",
          firefox: "51",
          safari: "10.1",
        },
      ]}
    />
  </PageSection>
  <BackToHomeLink />
</Layout>
