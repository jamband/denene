---
import Layout from "@/layouts/Layout.astro";

import BackToHomeLink from "@/components/BackToHomeLink.astro";
import BrowserSupport from "@/components/BrowserSupport.astro";
import MdnDoc from "@/components/MdnDoc.astro";
import PageHeader from "@/components/PageHeader.astro";
import PageSection from "@/components/PageSection.astro";

const title = "grids";
---

<Layout title={title}>
  <PageHeader title={title} />
  <PageSection>
    <MdnDoc path="Learn/CSS/CSS_layout/Grids" text={title}>
      css grid layout is a two-dimensional layout system for the web. it lets
      you lay content out in rows and columns. it has many features that make
      building complex layouts straightforward. this article will explain all
      you need to know to get started with page layout.
    </MdnDoc>
  </PageSection>
  <PageSection>
    <div class="container">
      <div class="box box1">one</div>
      <div class="box box2">two</div>
      <div class="box box3">three</div>
      <div class="box box4">four</div>
      <div class="box box5">five</div>
      <div class="box box6">six</div>
      <div class="box box7">seven</div>
      <div class="box box8">eight</div>
      <div class="box box9">nine</div>
      <div class="box box10">ten</div>
    </div>
  </PageSection>
  <PageSection>
    <BrowserSupport
      items={[
        {
          value: "display: grid",
          chrome: "57",
          firefox: "52",
          safari: "10.1",
        },
      ]}
    />
  </PageSection>
  <BackToHomeLink />
</Layout>

<style>
  .container {
    display: grid;
    font-family: var(--font-mono);
    font-weight: bold;
    gap: 1em;
    grid-auto-rows: minmax(100px, auto);
    margin-bottom: 2.5rem;
  }

  .box {
    background: rgb(var(--gray-700));
    border-radius: 0.25rem;
    display: grid;
    font-size: 0.9rem;
    place-items: center;
  }

  @media (max-width: 640px) {
    .container {
      grid-template-columns: repeat(2, 1fr);
    }

    .box3 {
      grid-column: 1 / 3;
    }

    .box6 {
      grid-column: 1 / 3;
    }

    .box9 {
      grid-column: 1 / 3;
      grid-row: 6 / 8;
    }

    .box10 {
      grid-column: 1 / 3;
    }
  }

  @media (min-width: 640px) {
    .container {
      grid-template-columns: repeat(3, 1fr);
    }

    .box1 {
      grid-column: 1 / 3;
      grid-row: 1 / 3;
    }

    .box2 {
      grid-column: 3 / 3;
      grid-row: 1 / 3;
    }

    .box3 {
      grid-column: 1 / 1;
    }

    .box4 {
      grid-column: 2 / 4;
    }

    .box5 {
      grid-column: 1 / 3;
    }

    .box7 {
      grid-row: 5 / 7;
    }

    .box10 {
      grid-column: 2 / 4;
    }
  }
</style>
