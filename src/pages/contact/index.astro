---
import "@/styles/app.css";

import { BackToHomeLink } from "@/components/back-to-home-link";
import { ExternalLink } from "@/components/external-link";
import { PageHeader } from "@/components/page/header";
import { PageSection } from "@/components/page/section";
import { APP_REPOSITORY_URL } from "@/constants/app";
import { Layout } from "@/layouts/layout";
import styles from "./_styles.module.css";

const title = "contact";
---

<Layout title={title}>
  <PageHeader title={title} />
  <PageSection class={styles.container}>
    <p>
      please to the message via
      <ExternalLink href="https://twitter.com/livejam_db">x</ExternalLink>
      or
      <ExternalLink href={`${APP_REPOSITORY_URL}/issues`}>github</ExternalLink>
      issues. thank you.
    </p>
  </PageSection>
  <BackToHomeLink />
</Layout>
