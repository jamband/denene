---
import Layout from "~/layouts/Layout.astro";

import BackToHomeLink from "~/components/BackToHomeLink.astro";
import BrowserSupport from "~/components/BrowserSupport.astro";
import MdnDoc from "~/components/MdnDoc.astro";
import PageHeader from "~/components/PageHeader.astro";
import PageSection from "~/components/PageSection.astro";
import PageSubHeader from "~/components/PageSubHeader.astro";
import StarImage from "~/components/StarImage.astro";
import { APP_NAME } from "~/constants/app";

const title = "position";
const [account, repository] = APP_NAME.split("/");
---

<Layout title={title} description="">
  <PageHeader title={title} />
  <PageSection>
    <MdnDoc path="Web/CSS/position" text={title}>
      the <code>position</code> css property sets how an element is positioned in
      a document. the top, right, bottom, and left properties determine the final
      location of positioned elements.
    </MdnDoc>
  </PageSection>
  <PageSection>
    <PageSubHeader title="overlay contents" />
    <p class="description">
      an example of an overlay images using <code>position: relative;</code> and
      <code>position: absolute;</code>.
    </p>
    <div class="example1">
      <StarImage />
      <p class="example1-text">
        <span class="account">{account}/</span><span class="repository"
          >{repository}
        </span>
      </p>
    </div>
  </PageSection>
  <PageSection>
    <PageSubHeader title="fixed position side content" />
    <p class="description">
      using <code>position: sticky;</code>. please scroll down a lot.
    </p>
    <div class="example2">
      <div class="example2-main">main</div>
      <div class="example2-side">side</div>
    </div>
  </PageSection>
  <PageSection>
    <BrowserSupport
      items={[
        {
          value: "position: sticky",
          chrome: "56",
          firefox: "32",
          safari: "13",
        },
      ]}
    />
  </PageSection>
  <BackToHomeLink />
</Layout>

<style>
  .description {
    margin-bottom: 1rem;
  }

  .example1 {
    position: relative;
  }

  .example1-text {
    font-family: var(--font-mono);
    font-weight: bold;
    left: 50%;
    position: absolute;
    text-align: center;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  .example1-text > .account {
    color: var(--gray-100);
    font-size: 0.85rem;
  }

  .example1-text > .repository {
    color: var(--pink-300);
  }

  .example2 {
    display: flex;
    flex-direction: row-reverse;
    gap: 1rem;
    text-align: center;
  }

  .example2-main {
    background: var(--gray-700);
    border-radius: 0.25rem;
    font-family: var(--font-mono);
    font-weight: bold;
    height: 100vh;
    padding: 1rem;
    width: 100%;
  }

  .example2-side {
    background: var(--gray-700);
    border-radius: 0.25rem;
    font-family: var(--font-mono);
    font-weight: bold;
    height: 3.5em;
    padding: 1rem;
    position: sticky;
    top: 5em;
    width: 40%;
  }
</style>
