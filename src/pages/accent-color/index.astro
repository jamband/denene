---
import { BackToHomeLink } from "@/components/back-to-home-link";
import { BrowserSupport } from "@/components/browser-support";
import { Code } from "@/components/code";
import { MdnDoc } from "@/components/mdn-doc";
import { PageHeader } from "@/components/page/header";
import { PageSection } from "@/components/page/section";
import { Layout } from "@/layouts/layout";
import styles from "@/styles/pages/accent-color/styles.module.css";

const title = "accent-color";
---

<Layout title={title}>
  <PageHeader title={title} />
  <PageSection>
    <MdnDoc path="Web/CSS/accent-color" text={title}>
      the <Code code="accent-color" /> css property sets the accent color for
      user-interface controls generated by some elements.
    </MdnDoc>
  </PageSection>
  <PageSection class={styles.container}>
    <fieldset class={styles.example1}>
      <legend>#1</legend>
      <div class={styles.checkbox}>
        <input type="checkbox" id="checkbox1-1" checked />
        <label for="checkbox1-1">checkbox1</label>
      </div>
      <div class={styles.radioContainer}>
        <div class={styles.radio}>
          <input type="radio" id="radio1-1" name="radio1" checked />
          <label for="radio1-1">radio1</label>
        </div>
        <div class={styles.radio}>
          <input type="radio" id="radio1-2" name="radio1" />
          <label for="radio1-2">radio2</label>
        </div>
      </div>
      <div class={styles.range}>
        <label for="range1-1">range1</label>
        <input
          type="range"
          id="range1-1"
          min={0}
          max={100}
          step={10}
          value={50}
        />
      </div>
      <div class={styles.progress}>
        <label for="progress1-1">progress1</label>
        <progress id="progress1-1" max={100} value={50}>50%</progress>
        <span>50%</span>
      </div>
    </fieldset>
    <fieldset class={styles.example2}>
      <legend>#2</legend>
      <div class={styles.checkbox}>
        <input type="checkbox" id="checkbox2-1" checked />
        <label for="checkbox2-1">checkbox1</label>
      </div>
      <div class={styles.radioContainer}>
        <div class={styles.radio}>
          <input type="radio" id="radio2-1" name="radio2" checked />
          <label for="radio2-1">radio1</label>
        </div>
        <div class={styles.radio}>
          <input type="radio" id="radio2-2" name="radio2" />
          <label for="radio2-2">radio2</label>
        </div>
      </div>
      <div class={styles.range}>
        <label for="range2-1">range1</label>
        <input
          type="range"
          id="range2-1"
          min={0}
          max={100}
          step={10}
          value={50}
        />
      </div>
      <div class={styles.progress}>
        <label for="progress2-1">progress1</label>
        <progress id="progress2-1" max={100} value={50}>50%</progress>
        <span>50%</span>
      </div>
    </fieldset>
  </PageSection>
  <PageSection>
    <BrowserSupport
      items={[
        {
          value: "accent-color",
          chrome: "93",
          firefox: "92",
          safari: "15.4",
        },
      ]}
    />
  </PageSection>
  <BackToHomeLink />
</Layout>
