---
import Head from "./Head.astro";

import Footer from "./Footer.astro";
import Header from "./Header.astro";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<style>
  main {
    margin: 0 auto;
    padding: 7rem 1rem;
  }

  @media (width >= 640px) {
    main {
      max-width: 640px;
    }
  }

  @media (width >= 768px) {
    main {
      max-width: 768px;
    }
  }
</style>

<html lang="en">
  <head>
    <Head title={title} description={description} />
  </head>
  <body>
    <Header />
    <main><slot /></main>
    <Footer />
  </body>
</html>

<script is:inline>
  document.addEventListener("touchstart", () => {}, { passive: true });
</script>
