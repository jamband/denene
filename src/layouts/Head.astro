---
import "@/styles/app.css";

import { APP_DESCRIPTION, APP_NAME } from "@/constants/app";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
const _title = title ? `${title} ï½¥ ${APP_NAME}` : APP_NAME;
const _description = description ?? APP_DESCRIPTION;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,viewport-fit=cover" />
<meta name="description" content={_description} />
<link rel="icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
<title>{_title}</title>
<meta name="og:type" content="website" />
<meta name="og:site_name" content={APP_NAME} />
<meta name="og:url" content={Astro.url} />
<meta name="og:title" content={_title} />
<meta name="og:description" content={_description} />
